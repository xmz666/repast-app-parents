  <select id="selectOrderByOrderSn" parameterType="string" resultMap="BaseResultMap">
  select * from oms_order where order_sn = #{orderSn}
</select>
  <select id="getShopSettingAndMbrRule" parameterType="Object" resultType="com.aaa.lee.app.vo.ShopAndMemberSettingVo">
    SELECT os.shop_id,os.normal_order_overtime,os.confirm_overtime,os.finish_overtime,os.comment_overtime,
        mrs.continue_sign_point,mrs.consume_per_point,mrs.low_order_amount,mrs.max_point_per_order
    FROM oms_order_setting os
    inner join ums_member_rule_setting mrs
    on os.shop_id = mrs.shop_id
    where os.shop_id = #{shopId} and mrs.type = #{type}
  </select>

  <select id="selectOrderInfoByOrderId" parameterType="long" resultMap="BaseResultMap">
    select shop_id, order_sn, member_username, receiver_name, receiver_phone, receive_time
    from oms_order where id=#{orderId} and delete_status=0 and `status` between 1 and 3
